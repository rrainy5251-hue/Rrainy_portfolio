---
const { project } = Astro.props;
const d = project.data;
---
<section class="projectHeader">
  <div class="meta" style="color:var(--muted); font-weight:600;">
    {d.type} Â· {d.year}
  </div>
  <h1>{d.title}</h1>
  <p class="desc">{d.summary}</p>
</section>

<section class="details">
  <div class="detail">
    <p class="label">Client</p>
    <p class="value">{d.client}</p>
  </div>
  <div class="detail">
    <p class="label">Role</p>
    <p class="value">{d.role}</p>
  </div>
</section>

{d.cover && (
  <div style="border:1px solid var(--line); border-radius: var(--radius); overflow:hidden;">
    <img src={d.cover} alt={d.title} style="width:100%; display:block;" />
  </div>
)}

<div class="prose">
  <slot />
</div>
